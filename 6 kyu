//Multiples of 3 or 5
using System.Collections.Generic;

public static class Kata
{
  public static int Solution(int value)
  {
     
     value--;
     List<int> values = new List<int>();
     int i = 0;
    
     while (i <= value)
     {
         if (value % 3 == 0 || value % 5 ==0)
         {
              values.Add(value);
         }
         value--;
      }
      int sum = 0;
      for (i = 0; i < values.Count; i++)
      {
          sum += values[i];
      }
      return sum;
  }
}
